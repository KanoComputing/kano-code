{
    "ignore": ["docs", "examples", "guides", "jenkins", "locale", ".git", "**/*.wav", "**/*.mp3", "**/*.md"],
    "license": "LICENSE",
    "licenseFormats": {
        "js|ts": {
            "prepend": "/*",
            "append": " */\n",
            "eachLine": {
                "prepend": " * "
            }
        },
        "dotfile": {
            "eachLine": {
                "prepend": "# "
            }
        },
        "svg|html": {
            "prepend": "<!--",
            "append": "-->"
        }
    },
    "trailingWhitespace": "TRIM"
}