{
    "version": "1.0.0",
    "defaultApp": "{\"source\":\"<xml xmlns=\\\"http://www.w3.org/1999/xhtml\\\"><variables></variables></xml>\",\"code\":\"app.onStart(function() {\\n  button.background = '#01579B';\\n\\n});\\n\\nbutton.onClick(function() {\\n\\n});\\n\",\"parts\":[{\"type\":\"speaker\",\"id\":\"speakert\",\"name\":\"Talk Machine\"}]}",
    "whitelist": {
        "app": ["onStart"]
    },
    "partsWhitelist": {
        "speaker": ["volume"]
    },
    "flyoutMode": true,
    "steps": [
        {
            "type": "create-block",
            "category": "part#speakert>toolbox",
            "blockType": "volume_set",
            "alias": "block_2",
            "openFlyoutCopy": "Open the ${part#speakert>toolbox} tray",
            "grabBlockCopy": "Drag this block with your mouse or finger into the code space",
            "connectTo": "alias#start_1>next",
            "connectCopy": "Connect to this block"
        },
        {
            "banner": {
                "text": "This is the button part ${part#button>toolbox} and this banner can have a lot of text, the overflow should be just fine",
                "nextButton": true,
                "hint": "Drag ${part#button>toolbox} here"
            }
        },
        {
            "banner": "Oopen the ${toolbox#draw} thing",
            "beacon": "toolbox#draw:100,50",
            "validation": {
                "blockly": {
                    "open-flyout": "toolbox#draw"
                }
            }
        },
        {
            "beacon": "toolbox#draw>flyout-block.draw_circle",
            "validation": {
                "blockly": {
                    "create": {
                        "type": "toolbox#draw>flyout-block.draw_circle",
                        "alias": "math"
                    }
                }
            }
        },
        {
            "banner": "Some markdown syntax ${toolbox#color}",
            "beacon": "toolbox#draw:100,50",
            "tooltips": [
                {
                    "target": "toolbox#draw",
                    "text": "Here ${toolbox#draw} have some cake for your birthday 🎂",
                    "position": "right"
                },
                {
                    "target": "add-part-button",
                    "text": "Want to have some fun with parts?<br>(You can't dismiss me BTW)",
                    "position": "left",
                    "sticky": true
                }
            ],
            "validation": {
                "blockly": {
                    "open-flyout": "toolbox#draw"
                }
            }
        },
        {
            "beacon": "toolbox#draw>flyout-block.draw_set_background_color",
            "validation": {
                "blockly": {
                    "create": {
                        "type": "toolbox#draw>flyout-block.draw_set_background_color",
                        "alias": "set_back"
                    }
                }
            }
        },
        {
            "beacon": "part#button>block.onClick",
            "tooltips": [
                {
                    "target": "part#button>block.onClick",
                    "text": "Jello 🤷‍♀️",
                    "position": "right"
                }
            ],
            "phantom_block": "part#button>block.onClick>input#CALLBACK",
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": "part#button>block.onClick>input#CALLBACK",
                        "target": "alias#set_back"
                    }
                }
            }
        },
        {
            "beacon": "alias#set_back>input#COLOR",
            "banner": "Change the color there",
            "validation": {
                "blockly": {
                    "value": {
                        "target": "alias#set_back>input#COLOR>shadow>input#COLOUR"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "This is the end of a challenge, this text can be change per challenge",
                "nextChallengeButton": "Give me more"
            }
        }
    ]
}
