{
		"steps": [
			{
				"tooltips": [
					{
						"location": "add-part-button",
						"position": "top",
						"text": "This app needs a microphone and an image part.<br />Click here to start adding them."
					}
				],
				"validation": {
					"open-parts": true
				}
			},
			{
				"tooltips": [
					{
						"location": "sidebar.parts.part-microphone",
						"position": "right",
						"text": "Drag the Microphone to your app"
					}
				],
				"highlight": "sidebar.parts.part-microphone",
				"arrow": {
					"source": "sidebar.parts.part-microphone",
					"target": "left-panel",
					"size": 120
				},
				"validation": {
					"add-part": {
						"type": "microphone",
						"id": "part_0"
					}
				}
			},
			{
				"tooltips": [
					{
						"location": "sidebar.parts.part-image",
						"position": "right",
						"text": "Now drag an image in too"
					}
				],
				"highlight": "sidebar.parts.part-image",
				"arrow": {
					"source": "sidebar.parts.part-image",
					"target": "left-panel",
					"size": 120
				},
				"validation": {
					"add-part": {
						"type": "image",
						"id": "part_1"
					}
				}
			},
			{
				"tooltips": [
					{
						"location": "add-part-button",
						"position": "top",
						"text": "Alright! Let's code!<br>Close the parts tray."
					}
				],
				"validation": {
					"close-parts": true
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"category": {
								"part": "part_0"
							}
						},
						"position": "left",
						"text": "Microphone code blocks are in here.<br />Click the button to see them."
					}
				],
				"validation": {
					"blockly": {
						"open-flyout": {
							"part": "part_0"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"flyout_block": {
								"part": "part_0",
								"type": "threshold"
							}
						},
						"position": "left",
						"text": "Drag the block that looks like this ...<br/><kano-blockly-block type=\"part_0#threshold\"></kano-blockly-block>"
					}
				],
				"arrow": {
					"target": {
						"flyout_block": {
							"part": "part_0",
							"type": "threshold"
						}
					},
					"angle": 315,
					"size": 80
				},
				"validation": {
					"blockly": {
						"create": {
							"target": "part_0",
							"type": "threshold",
							"id": "block_0"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": "default_part_event"
						},
						"position": "left",
						"text": "... and connect it to this block."
					}
				],
				"validation": {
					"blockly": {
						"connect": {
							"parent": "default_part_event",
							"target": "block_0"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": {
								"id": "block_0",
								"shadow": "VALUE"
							}
						},
						"position": "top",
						"text": "Change this number to <kano-value-preview>85</kano-value-preview>"
					}
				],
				"validation": {
					"blockly": {
						"value": {
							"target": {
								"id": "block_0",
								"shadow": "VALUE"
							},
							"value": "85"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"category": "camera"
						},
						"position": "left",
						"text": "The camera code is kept in here.<br /> Click to open."
					}
				],
				"validation": {
					"blockly": {
						"open-flyout": "camera"
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"flyout_block": "camera#take_picture"
						},
						"position": "left",
						"text": "We're going to tell the camera to take a picture.<br />Drag the <kano-blockly-block type=\"camera#take_picture\"></kano-blockly-block> block to your code."
					}
				],
				"arrow": {
					"target": {
						"flyout_block": "camera#take_picture"
					},
					"angle": 315,
					"size": 80
				},
				"validation": {
					"blockly": {
						"create": {
							"type": "camera#take_picture",
							"id": "block_1"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": "block_0"
						},
						"position": "left",
						"text": "Connect it here"
					}
				],
				"validation": {
					"blockly": {
						"connect": {
							"parent": "block_0",
							"target": "block_1"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"category": "events"
						},
						"position": "left",
						"text": "Open this tray"
					}
				],
				"validation": {
					"blockly": {
						"open-flyout": "events"
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"flyout_block": "part_event"
						},
						"position": "left",
						"text": "Drag the <kano-blockly-block type=\"part_event\"></kano-blockly-block> block onto your code space"
					}
				],
				"arrow": {
					"target": {
						"flyout_block": "part_event"
					},
					"angle": 315,
					"size": 80
				},
				"validation": {
					"blockly": {
						"create": {
							"type": "part_event",
							"id": "block_2"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": "block_2"
						},
						"position": "top",
						"text": "Change 'apps starts' to <kano-value-preview>Camera takes picture</kano-value-preview>"
					}
				],
				"validation": {
					"blockly": {
						"value": {
							"target": "block_2",
							"value": "camera.picture-taken"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"category": {
								"part": "part_1"
							}
						},
						"position": "left",
						"text": "Open the Image tray"
					}
				],
				"validation": {
					"blockly": {
						"open-flyout": {
							"part": "part_1"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"flyout_block": {
								"part": "part_1",
								"type": "set_image_to"
							}
						},
						"position": "left",
						"text": "Drag the <kano-blockly-block type=\"part_1#set_image_to\"></kano-blockly-block> block onto your code space"
					}
				],
				"arrow": {
					"target": {
						"flyout_block": {
							"part": "part_1",
							"type": "set_image_to"
						}
					},
					"angle": 315,
					"size": 80
				},
				"validation": {
					"blockly": {
						"create": {
							"target": "part_1",
							"type": "set_image_to",
							"id": "block_3"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": "block_2"
						},
						"position": "left",
						"text": "Connect it to this block"
					}
				],
				"validation": {
					"blockly": {
						"connect": {
							"parent": "block_2",
							"target": "block_3"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"category": "camera"
						},
						"position": "left",
						"text": "Open this tray"
					}
				],
				"validation": {
					"blockly": {
						"open-flyout": "camera"
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"flyout_block": "camera#last_picture"
						},
						"position": "left",
						"text": "Drag the <kano-blockly-block type=\"camera#last_picture\"></kano-blockly-block> block onto your code space"
					}
				],
				"arrow": {
					"target": {
						"flyout_block": "camera#last_picture"
					},
					"angle": 315,
					"size": 80
				},
				"validation": {
					"blockly": {
						"create": {
							"type": "camera#last_picture",
							"id": "block_4"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": {
							"block": "block_3"
						},
						"position": "left",
						"text": "Connect it to this block"
					}
				],
				"validation": {
					"blockly": {
						"connect": {
							"parent": "block_3",
							"target": "block_4"
						}
					}
				}
			},
			{
				"tooltips": [
					{
						"location": "make-button",
						"position": "bottom",
						"text": "The app is finished, hit the play button."
					}
				],
				"validation": {
					"running": {
						"value": true
					}
				}
			},
			{
				"tooltips": [
					{
						"location": "left-panel",
						"position": "right",
						"text": "You can now test the app",
						"next_button": true
					}
				]
			}
		],
		"parts": [
			"microphone",
			"image"
		],
		"modules": [
			"events"
		],
		"variables": [],
		"mode": "camera"
	}
