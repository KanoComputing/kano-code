{
    "parts": ["map", "iss"],
    "modules": ["Control", "Variables", "Operators"],
    "steps": [{
        "modal": {
            "text": "Welcome to Make Apps! This is where the magic will happen."
        }
    },{
        "focus": "workspace-controls.add-part",
        "validation": {
            "open-parts": true
        },
        "tooltips": [{
            "location": "workspace-controls.add-part",
            "position": "left",
            "text": "Click on this button to see the parts you can add to your app"
        }]
    },{
        "validation": {
            "select-new-part": {
                "type": "map"
            }
        },
        "tooltips": [{
            "location": "sidebar.parts.part-map",
            "position": "right",
            "text": "Select the map part"
        }]
    },{
        "validation": {
            "select-new-part": {
                "type": "iss"
            }
        },
        "tooltips": [{
            "location": "sidebar.parts.part-iss",
            "position": "right",
            "text": "Select the ISS part"
        }]
    },{
        "validation": {
            "add-part": {
                "type": "map",
                "id": "map_1"
            }
        },
        "tooltips": [{
            "location": "sidebar.done",
            "position": "top",
            "text": "Click on the button to add them"
        }]
    },{
        "validation": {
            "add-part": {
                "type": "iss",
                "id": "iss_1"
            }
        }
    },{
        "focus": {
            "path": "workspace-controls",
            "part": "map_1"
        },
        "validation": {
            "open-part-config": {
                "target": "map_1"
            }
        },
        "tooltips": [{
            "location": {
                "path": "workspace-controls",
                "part": "map_1"
            },
            "position": "right",
            "text": "Select the map you made"
        }]
    },{
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip",
            "position": "right",
            "text": "Style your map with the sliders. Try changing the size to fill the window.",
            "next_button": true
        }]
    },{
        "validation": {
            "close-part-editor": true
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip.close-button",
            "position": "right",
            "text": "Now it’s time to configure the data source. This button goes back."
        }]
    },{
        "focus": {
            "path": "workspace-controls",
            "part": "iss_1"
        },
        "validation": {
            "open-part-config": {
                "target": "iss_1"
            }
        },
        "tooltips": [{
            "location": {
                "path": "workspace-controls",
                "part": "iss_1"
            },
            "position": "right",
            "text": "Select the ISS part"
        }]
    },{
        "validation": {
            "enable-refresh": {
                "target": "iss_1"
            }
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip",
            "position": "right",
            "text": "Here you can ask go get the new data every 5 seconds/30 seconds/An hour... Click on the refresh to enable that"
        }]
    },{
        "validation": {
            "manual-refresh": {
                "target": "iss_1"
            }
        },
        "focus": "part-editor.data-editor.refresh-button",
        "tooltips": [{
            "location": "part-editor.data-editor.refresh-button",
            "position": "right",
            "text": "If you click on this button you can ask to see the data"
        }]
    },{
        "focus": "part-editor.data-editor.data-browser",
        "tooltips": [{
            "location": "part-editor.data-editor.data-browser",
            "position": "right",
            "text": "Here you see the last values",
            "next_button": true
        }]
    },{
        "validation": {
            "close-part-editor": true
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip.close-button",
            "position": "right",
            "text": "We're done with the configuration, let's add some code!"
        }]
    },{
        "validation": {
            "open-trigger-dropdown": true
        },
        "focus": "root-view.open-dropdown",
        "tooltips": [{
            "location": "root-view.open-dropdown",
            "position": "bottom",
            "text": "Click here to choose what will trigger your code"
        }]
    },{
        "validation": {
            "trigger": {
                "emitter": {
                    "part": "iss_1"
                },
                "event": "update"
            }
        },
        "focus": "root-view.trigger-dropdown",
        "tooltips": [{
            "location": "root-view.trigger-dropdown",
            "position": "right",
            "text": "For this app, we only need one trigger: 'When ISS updated'. Select it now."
        }]
    },{
        "validation": {
            "blockly": {
                "create": {
                    "target": "map_1",
                    "type": "show_marker",
                    "id": "show_marker"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "We need a marker on the map to show where the Space Station is. You can find a 'move marker to' block in the Map drawer."
        }]
    },{
        "validation": {
            "blockly": {
                "create": {
                    "target": "iss_1",
                    "type": "get_value",
                    "id": "get_iss_latitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Find the ISS get block in the ISS drawer ..."
        }]
    },{
        "validation": {
            "blockly": {
                "connect": {
                    "parent": "show_marker",
                    "target": "get_iss_latitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "... and connect it to our 'move marker' block."
        }]
    },{
        "validation": {
            "blockly": {
                "create": {
                    "target": "iss_1",
                    "type": "get_value",
                    "id": "get_iss_longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Find another ISS get block in the ISS drawer ..."
        }]
    },{
        "validation": {
            "blockly": {
                "connect": {
                    "parent": "show_marker",
                    "target": "get_iss_longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "... and connect it to our 'move marker' block."
        }]
    },{
        "validation": {
            "blockly": {
                "value": {
                    "target": "get_iss_longitude",
                    "value": "longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Choose longitude."
        }]
    },{
        "validation": {
            "running": {
                "value": true
            }
        },
        "focus": "make-button",
        "tooltips": [{
            "location": "make-button",
            "position": "left",
            "text": "Let's see if your app works, hit the ‘make’ button."
        }]
    },{
        "save_to_storage": true,
        "tooltips": [{
            "location": "workspace",
            "position": "left",
            "text": "You’ve completed your first app. High five!",
            "next_button": true
        }]
    }]
}
