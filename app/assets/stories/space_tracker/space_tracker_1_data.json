{
    "parts": ["map", "iss"],
    "modules": ["control", "operators", "variables"],
    "steps": [{
        "modal": {
            "text": "Let's grab that data from outer space!"
        }
    },{
        "validation": {
            "open-parts": true
        },
        "tooltips": [{
            "location": "workspace-controls.add-part",
            "position": "top",
            "text": "We need a special <em>part</em> to load the data.<br />Click here to open the Add Parts menu."
        }]
    },{
        "tooltips": [{
            "location": "sidebar.parts",
            "position": "left",
            "text": "These are your parts!<br />They are the building blocks<br />we'll use to build your app.",
            "next_button": true
        }]
    },{
        "tooltips": [{
            "location": "sidebar.parts.part-iss",
            "position": "right",
            "text": "This part loads the ISS's beacon from the internet",
            "next_button": true
        }]
    },{
        "validation": {
            "select-new-part": {
                "type": "iss"
            }
        },
        "tooltips": [{
            "location": "sidebar.parts.part-iss",
            "position": "right",
            "text": "We need to add it to our app.<br />Click to select it..."
        }]
    },{
        "validation": {
            "add-part": {
                "type": "iss",
                "id": "iss_1"
            }
        },
        "tooltips": [{
            "location": "sidebar.done",
            "position": "right",
            "text": "...and click here to add it"
        }]
    },{
        "tooltips": [{
            "location": {
                "path": "workspace-controls",
                "part": "iss_1"
            },
            "position": "top",
            "text": "Great!<br />Now the part is down here.",
            "next_button": true
        }]
    },{
        "focus": {
            "path": "workspace-controls",
            "part": "iss_1"
        },
        "validation": {
            "open-part-config": {
                "target": "iss_1"
            }
        },
        "tooltips": [{
            "location": {
                "path": "workspace-controls",
                "part": "iss_1"
            },
            "position": "right",
            "text": "Click it to dive in!"
        }]
    },{
        "validation": {
            "manual-refresh": {
                "target": "iss_1"
            }
        },
        "focus": "part-editor.data-editor.refresh-button",
        "tooltips": [{
            "location": "part-editor.data-editor.refresh-button",
            "position": "right",
            "text": "Ready to see data flying in from space?<br />Click here!"
        }]
    },{
        "tooltips": [{
            "location": "part-editor.data-editor.data-browser",
            "position": "right",
            "text": "Data!<br />Can you decode it?",
            "next_button": true
        }]
    },
    {
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip",
            "position": "right",
            "text": "We can also configure the part from here",
            "next_button": true
        }]
    },
    {
        "validation": {
            "enable-refresh": {
                "target": "iss_1"
            }
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip",
            "position": "right",
            "text": "Flip that switch to refresh the data every five seconds"
        }]
    },
    {
        "validation": {
            "close-part-editor": true
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip.close-button",
            "position": "right",
            "text": "We're done here! Click to close."
        }]
    },{
        "validation": {
            "open-parts": true
        },
        "tooltips": [{
            "location": "workspace-controls.add-part",
            "position": "top",
            "text": "Time to add another part!"
        }]
    },{
        "tooltips": [{
            "location": "sidebar.parts",
            "position": "left",
            "text": "To turn that data into pixels,<br /> we need a map",
            "next_button": true
        }]
    },
    {
        "validation": {
            "select-new-part": {
                "type": "map"
            }
        },
        "tooltips": [{
            "location": "sidebar.parts",
            "position": "left",
            "text": "Add the map part"
        }]
    },
    {
        "validation": {
            "add-part": {
                "type": "map",
                "id": "map_1"
            }
        },
        "tooltips": [{
            "location": "sidebar.parts",
            "position": "left",
            "text": "Add the map part"
        }]
    }, {
        "save_to_storage": true,
        "tooltips": [{
            "location": "workspace",
            "position": "left",
            "text": "There's your map!",
            "next_button": true
        }]
    },{
        "focus": {
            "path": "workspace-controls",
            "part": "map_1"
        },
        "validation": {
            "open-part-config": {
                "target": "map_1"
            }
        },
        "tooltips": [{
            "location": {
                "path": "workspace-controls",
                "part": "map_1"
            },
            "position": "right",
            "text": "Click down here to make it bigger"
        }]
    },{
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip",
            "position": "right",
            "text": "Use the sliders to make it fill the window",
            "next_button": true
        }]
    },{
        "validation": {
            "close-part-editor": true
        },
        "focus": "part-editor-tooltip",
        "tooltips": [{
            "location": "part-editor-tooltip.close-button",
            "position": "right",
            "text": "Done! Click to close."
        }]
    },
    {
        "tooltips": [{
            "location": "root-view.open-dropdown",
            "position": "bottom",
            "text": "Now that we have our parts ready...<br/>...let's write some code!",
            "next_button": true
        }]
    },
    {
        "validation": {
            "open-trigger-dropdown": true
        },
        "tooltips": [{
            "location": "root-view.open-dropdown",
            "position": "bottom",
            "text": "Click here to write your first code"
        }]
    },
    {
        "tooltips": [{
            "location": "root-view.trigger-dropdown",
            "position": "right",
            "text": "We need to decide when our code will run",
            "next_button": true
        }]
    },{
        "validation": {
            "trigger": {
                "emitter": {
                    "part": "iss_1"
                },
                "event": "update"
            }
        },
        "focus": "root-view.trigger-dropdown",
        "tooltips": [{
            "location": "root-view.trigger-dropdown",
            "position": "right",
            "text": "We want it to be triggered 'When ISS updated'...so click that option"
        }]
    },{

        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Welcome to the code editor.<br />Here you can use code to bring your parts to life! ",
            "next_button": true
        }]
    },
    {

        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "We are going to write code to load the data on the map",
            "next_button": true
        }]
    },
    {
        "validation": {
            "blockly": {
                "create": {
                    "target": "map_1",
                    "type": "show_marker",
                    "id": "show_marker"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Click the Map tab and drag the 'move marker to' block onto the workspace"
        }]
    },{
        "validation": {
            "blockly": {
                "create": {
                    "target": "iss_1",
                    "type": "get_value",
                    "id": "get_iss_latitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Next find the latitude block in the ISS drawer ..."
        }]
    },{
        "validation": {
            "blockly": {
                "connect": {
                    "parent": "show_marker",
                    "target": "get_iss_latitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "... and connect it to our 'move marker to' block."
        }]
    },{
        "validation": {
            "blockly": {
                "create": {
                    "target": "iss_1",
                    "type": "get_value",
                    "id": "get_iss_longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Next grab another latitude block in the ISS drawer ..."
        }]
    },{
        "validation": {
            "blockly": {
                "connect": {
                    "parent": "show_marker",
                    "target": "get_iss_longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "... and connect it to our 'move marker' block."
        }]
    },{
        "validation": {
            "blockly": {
                "value": {
                    "target": "get_iss_longitude",
                    "value": "longitude"
                }
            }
        },
        "focus": "root-view",
        "tooltips": [{
            "location": "root-view",
            "position": "right",
            "text": "Click on the dropdown and change it longitude."
        }]
    },{
        "validation": {
            "running": {
                "value": true
            }
        },
        "focus": "make-button",
        "tooltips": [{
            "location": "make-button",
            "position": "left",
            "text": "Let's see if your app works, hit the ‘make’ button."
        }]
    },{
        "save_to_storage": true,
        "tooltips": [{
            "location": "workspace",
            "position": "left",
            "text": "Hurrah! You built your first app!<br />Watch it zoom across the world at 17000mph!",
            "next_button": true
        }]
    },{
        "save_to_storage": true,
        "focus":"share-button",
        "tooltips": [{
            "location": "share-button",
            "position": "left",
            "text": "Click to publish your creation to the world!"
        }]
    }]
}
