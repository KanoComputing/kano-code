{
    "parts": ["text", "button", "image", "weather", "speaker"],
    "modules": ["control", "operators", "variables", "background"],
    "steps": [
      {
        "tooltips": [{
            "location": "add-part-button",
            "position": "top",
            "text": "This app needs a button we<br />can press. Click here."
        }],
        "validation": {
            "open-parts": true
        }
    },{
        "tooltips": [{
            "location": "sidebar.parts.part-button",
            "position": "right",
            "text": "Drag the button to<br />your app"
        }],
        "arrow": {
            "source": "sidebar.parts.part-button",
            "target": "left-panel",
            "size": 120
        },
        "validation": {
            "add-part": {
                "type": "button",
                "id": "button_1"
            }
        }
    },{
        "tooltips": [{
            "location": "add-part-button",
            "position": "top",
            "text": "Close the parts drawer"
        }],
        "validation": {
            "close-parts": true
        }
    },{
        "tooltips": [{
            "location": {
                "block": "default_part_event"
            },
            "position": "top",
            "text": "Change ‘app starts’ to ‘Button is clicked’"
        }],
        "validation": {
            "blockly": {
                "value": {
                    "target": "default_part_event",
                    "value": {
                        "event_from": "button_1",
                        "event": "clicked"
                    }
                }
            }
        }
    },{
        "tooltips": [{
            "location": {
                "category": "background"
            },
            "position": "left",
            "text": "Open the background tray"
        }],
        "validation": {
            "blockly": {
                "open-flyout": "background"
            }
        }
    },{
        "tooltips": [{
            "location": {
                "flyout_block": "set_background_color"
            },
            "position": "left",
            "text": "Drag the ‘Set<br />background’ block onto<br />your code space"
        }],
        "arrow": {
            "source": {
                "flyout_block": "set_background_color"
            },
            "target": {
                "block": "default_part_event"
            },
            "size": 120
        },
        "validation": {
            "blockly": {
                "create": {
                    "target": "background",
                    "type": "set_background_color",
                    "id": "set_background_color_1"
                }
            }
        }
    },{
        "tooltips": [{
            "location": {
                "block": "default_part_event"
            },
            "position": "left",
            "text": "Connect the blocks"
        }],
        "validation": {
            "blockly": {
                "connect": {
                    "parent": "default_part_event",
                    "target": "set_background_color_1"
                }
            }
        }
    },{
        "tooltips": [{
            "location": {
                "category": "variables"
            },
            "position": "left",
            "text": "Open the variables tray"
        }],
        "validation": {
            "blockly": {
                "open-flyout": "variables"
            }
        }
    },{
        "tooltips": [{
            "location": {
                "flyout_block": "random_colour"
            },
            "position": "right",
            "text": "Grab the random<br />color block"
        }],
        "validation": {
            "blockly": {
                "create": {
                    "target": "variables",
                    "type": "random_colour",
                    "id": "random_colour_1"
                }
            }
        }
    },{
        "tooltips": [{
            "location": {
                "block": "set_background_color_1"
            },
            "position": "left",
            "text": "Plug it into the<br />background color"
        }],
        "validation": {
            "blockly": {
                "connect": {
                    "target": "random_colour_1",
                    "parent": "set_background_color_1"
                }
            }
        }
    },{
        "tooltips": [{
            "location": "make-button",
            "position": "bottom",
            "text": "Click play"
        }],
        "validation": {
            "running": {
                "value": true
            }
        }
    },{
        "tooltips": [{
            "location": "left-panel",
            "position": "right",
            "text": "<strong>Click the button!</strong><br />(Click, click, click)",
            "next_button": true
        }]
    }]
}
