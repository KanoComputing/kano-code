{
	"steps": [
		{
			"tooltips": [
				{
					"location": "workspace.toolbar.add-part-button",
					"position": "top",
					"text": "This app needs a button we can press.<br />Buttons and parts are contained in here.<br />Click to open."
				}
			],
			"validation": {
				"open-parts": true
			}
		},
		{
			"tooltips": [
				{
					"location": "sidebar.parts.part-button",
					"position": "right",
					"text": "Drag the Button to your app"
				}
			],
			"highlight": "sidebar.parts.part-button",
			"arrow": {
				"source": "sidebar.parts.part-button",
				"target": "workspace-panel",
				"size": 120
			},
			"validation": {
				"add-part": {
					"type": "button",
					"id": "part_0"
				}
			}
		},
		{
			"tooltips": [
				{
					"location": "workspace.toolbar.add-part-button",
					"position": "top",
					"text": "Now close the drawer by clicking here."
				}
			],
			"validation": {
				"close-parts": true
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"category": "normal"
					},
					"position": "right",
					"text": "Open the background tray"
				}
			],
			"validation": {
				"blockly": {
					"open-flyout": "normal"
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"flyout_block": "normal#set_background_color"
					},
					"position": "right",
					"text": "Drag the <kano-blockly-block type=\"normal#set_background_color\"></kano-blockly-block><br />block onto your code space"
				}
			],
			"arrow": {
				"target": {
					"flyout_block": "normal#set_background_color"
				},
				"angle": 120,
				"size": 80
			},
			"validation": {
				"blockly": {
					"create": {
						"type": "normal#set_background_color",
						"id": "block_0"
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"block": {
							"rawId": "default_part_event_id"
						}
					},
					"position": "right",
					"text": "Connect it to this block"
				}
			],
			"validation": {
				"blockly": {
					"connect": {
						"parent": {
							"rawId": "default_part_event_id",
							"inputName": "DO"
						},
						"target": "block_0"
					}
				}
			},
			"phantom_block": {
				"location": {
					"block": {
						"rawId": "default_part_event_id"
					}
				},
				"target": "DO"
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"category": "color"
					},
					"position": "right",
					"text": "Open the Color tray"
				}
			],
			"validation": {
				"blockly": {
					"open-flyout": "color"
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"flyout_block": "random_colour"
					},
					"position": "right",
					"text": "Grab a <kano-blockly-block type=\"random_colour\"></kano-blockly-block> block"
				}
			],
			"arrow": {
				"target": {
					"flyout_block": "random_colour"
				},
				"angle": 120,
				"size": 80
			},
			"validation": {
				"blockly": {
					"create": {
						"type": "random_colour",
						"id": "block_1"
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"block": {
							"id": "block_0"
						}
					},
					"position": "right",
					"text": "Plug it into the<br />background color block"
				}
			],
			"validation": {
				"blockly": {
					"connect": {
						"parent": {
							"id": "block_0",
							"inputName": "COLOR"
						},
						"target": "block_1"
					}
				}
			},
			"phantom_block": {
				"location": {
					"block": "block_0"
				},
				"target": "COLOR"
			}
		},{
			"tooltips": [
				{
					"location": {
						"block": {
							"rawId": "default_part_event_id"
						}
					},
					"position": "right",
					"text": "Change the event from <kano-value-preview><span>‘app starts’</span></kano-value-preview><br />to <kano-value-preview><span>‘button is clicked’</span></kano-value-preview>"
				}
			],
			"validation": {
				"blockly": {
					"value": {
						"target": {
							"rawId": "default_part_event_id"
						},
						"value": {
							"event_from": "part_0",
							"event": "clicked"
						}
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": "workspace-panel",
					"position": "left",
					"text": "<strong>Click the button!</strong><br />(Click, click, click)",
					"next_button": true
				}
			]
		}
	],
	"parts": [
		"button"
	],
	"modules": [
		"color"
	],
	"filterBlocks": {
		"color": ["random_colour"]
	},
	"filterPartBlocks": {
		"button": ["get_label"]
	},
	"variables": [],
	"mode": "normal"
}
