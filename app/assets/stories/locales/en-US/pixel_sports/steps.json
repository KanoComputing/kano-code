{
    "steps": [
        {
            "banner": {
                "text": "We're going to use a data part in this app to download sports news.<br>Click here to see all the parts."
            },
            "beacon": {
                "target": "add-part-button"
            },
            "validation": {
                "open-parts": true
            }
        },
        {
            "tooltips": [
                {
                    "location": "parts-panel",
                    "position": "top",
                    "text": "Click on <b>Sports</b> to add it to your app"
                }
            ],
            "beacon": {
                "target": "parts-panel-sports"
            },
            "validation": {
                "add-part": {
                    "type": "sports",
                    "id": "part_0"
                }
            }
        },
        {
            "banner": {
                "text": "Data parts often bring in lists of data, we need to loop through each list item. Open the Sports tray"
            },
            "beacon": {
                "target": {
                    "category": {
                        "part": "part_0"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": {
                        "part": "part_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "This loops through the list items, drag the block onto your code space"
            },
            "beacon": {
                "target": {
                    "flyout_block": {
                        "part": "part_0",
                        "type": "for_each"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "target": "part_0",
                        "type": "for_each",
                        "id": "block_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": null,
                        "rawId": "default_part_event_id"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": null,
                            "rawId": "default_part_event_id",
                            "inputName": "DO"
                        },
                        "target": "block_0"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": null,
                        "rawId": "default_part_event_id"
                    }
                },
                "target": "DO"
            }
        },
        {
            "banner": {
                "text": "We'll use the text block to show the contents of the data"
            },
            "beacon": {
                "target": {
                    "category": "lightboard_text"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "lightboard_text"
                }
            }
        },
        {
            "banner": {
                "text": "Drag the block onto your code space"
            },
            "beacon": {
                "target": {
                    "flyout_block": "lightboard#light_scroll_text"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "lightboard#light_scroll_text",
                        "id": "block_1"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_0",
                        "rawId": "qd8Nf5/p/#shPcEvM}ej"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_0",
                            "rawId": "qd8Nf5/p/#shPcEvM}ej",
                            "inputName": "DO"
                        },
                        "target": "block_1"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_0",
                        "rawId": "qd8Nf5/p/#shPcEvM}ej"
                    }
                },
                "target": "DO"
            }
        },
        {
            "banner": {
                "text": "Now to get the actual data, open the Sports tray"
            },
            "beacon": {
                "target": {
                    "category": {
                        "part": "part_0"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": {
                        "part": "part_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "This block will get each sports news item one after another"
            },
            "beacon": {
                "target": {
                    "flyout_block": {
                        "part": "part_0",
                        "type": "get_value_at"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "target": "part_0",
                        "type": "get_value_at",
                        "id": "block_2"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_1",
                        "rawId": "I)),CEBB5zc_=r8Vnfy$"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_1",
                            "rawId": "I)),CEBB5zc_=r8Vnfy$",
                            "inputName": "TEXT"
                        },
                        "target": "block_2"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_1",
                        "rawId": "I)),CEBB5zc_=r8Vnfy$"
                    }
                },
                "target": "TEXT"
            }
        },
        {
            "banner": {
                "text": "Change to the color of your favorite sports team"
            },
            "beacon": {
                "target": {
                    "block": {
                        "shadow": "BACKGROUND_COLOR",
                        "id": "block_1"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "shadow": "BACKGROUND_COLOR",
                            "id": "block_1"
                        }
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Let's speed the text up so it's easier to read, change to <kano-value-preview><span>500</span></kano-value-preview>"
            },
            "beacon": {
                "target": {
                    "block": {
                        "shadow": "SPEED",
                        "id": "block_1"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "shadow": "SPEED",
                            "id": "block_1"
                        },
                        "value": "500"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Now you can watch the sports headlines roll in live!",
                "next_button": true
            },
            "beacon": {
                "target": "banner-button",
                "offset": 0
            }
        }
    ],
    "parts": [
        "sports"
    ],
    "modules": [],
    "variables": [],
    "filterBlocks": {
        "sports": [
            "for_each",
            "get_value_at"
        ],
        "lightboard": [
            "light_scroll_text"
        ]
    },
    "mode": "lightboard"
}