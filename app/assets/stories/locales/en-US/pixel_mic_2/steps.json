{
    "steps": [
        {
            "banner": {
                "text": "You're going to make a light that responds to sound. It uses the microphone again (obviously). Click 'add parts' to begin."
            },
            "beacon": {
                "target": "add-part-button"
            },
            "validation": {
                "open-parts": true
            }
        },
        {
            "tooltips": [
                {
                    "location": "parts-panel",
                    "position": "top",
                    "text": "Click on the <b>Mic</b> part to add it"
                }
            ],
            "beacon": {
                "target": "parts-panel-microphone"
            },
            "validation": {
                "add-part": {
                    "type": "microphone",
                    "id": "part_0"
                }
            }
        },
        {
            "banner": {
                "text": "Weâ€™ll use the loop again. Remember where it is?"
            },
            "beacon": {
                "target": {
                    "category": "control"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "control"
                }
            }
        },
        {
            "banner": {
                "text": "Nice. Grab the loop block."
            },
            "beacon": {
                "target": {
                    "flyout_block": "every_x_seconds"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "every_x_seconds",
                        "id": "block_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to the 'when app starts' block"
