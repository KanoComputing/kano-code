				"target": {
					"flyout_block": {
						"part": "part_1",
						"type": "get_value"
					}
				},
				"angle": 120,
				"size": 80
			},
			"validation": {
				"blockly": {
					"create": {
						"target": "part_1",
						"type": "get_value",
						"id": "block_4"
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"block": {
							"id": "block_3"
						}
					},
					"position": "right",
					"text": "Move the map's latitude to the ISS's latitude"
				}
			],
			"validation": {
				"blockly": {
					"connect": {
						"parent": {
							"id": "block_3",
							"inputName": "LATITUDE"
