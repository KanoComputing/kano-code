						"target": "block_5"
					}
				}
			},
			"phantom_block": {
				"location": {
					"block": "block_3"
				},
				"target": "LONGITUDE"
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"block": "block_5"
					},
					"position": "top",
					"text": "Change <kano-value-preview><span>latitude</span></kano-value-preview> to <kano-value-preview><span>longitude</span></kano-value-preview>"
				}
			],
			"validation": {
				"blockly": {
					"value": {
						"target": "block_5",
						"value": "longitude"
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": "workspace-panel",
					"position": "left",
					"text": "<strong>You did it!</strong> The space station is 400km<br />above the marker. You can make the map bigger<br />by clicking 'edit layout', then clicking on the map.",
					"next_button": true
				}
			]
		}
