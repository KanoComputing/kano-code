						"target": "block_4"
					}
				}
			},
			"phantom_block": {
				"location": {
					"block": "block_3"
				},
				"target": "LATITUDE"
			}
		},
        {
			"tooltips": [
				{
					"location": {
						"category": {
							"part": "part_1"
						}
					},
					"position": "right",
					"text": "Open the ISS tray again"
				}
			],
			"validation": {
				"blockly": {
					"open-flyout": {
						"part": "part_1"
					}
				}
			}
		},
		{
			"tooltips": [
				{
					"location": {
						"flyout_block": {
							"part": "part_1",
							"type": "get_value"
						}
					},
					"position": "right",
					"text": "Letâ€™s grab another of those blocks: <br /><kano-blockly-block type=\"part_1#get_value\"></kano-blockly-block>"
				}
			],
			"arrow": {
				"target": {
					"flyout_block": {
						"part": "part_1",
						"type": "get_value"
					}
				},
				"angle": 120,
				"size": 80
			},
			"validation": {
				"blockly": {
					"create": {
						"target": "part_1",
						"type": "get_value",
						"id": "block_5"
					}
				}
			}
		},
        {
			"tooltips": [
				{
					"location": {
						"block": {
							"id": "block_3"
						}
					},
					"position": "right",
					"text": "Plug it in here"
				}
			],
			"validation": {
				"blockly": {
					"connect": {
						"parent": {
							"id": "block_3",
							"inputName": "LONGITUDE"
