            "beacon": {
                "target": {
                    "block": {
                        "id": null,
                        "rawId": "default_part_event_id"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": null,
                            "rawId": "default_part_event_id",
                            "inputName": "DO"
