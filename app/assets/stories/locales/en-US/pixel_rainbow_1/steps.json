{
    "steps": [
        {
            "banner": {
                "text": "You're about to make a light show that reacts to sound!<br> Let's go!",
                "next_button": true
            },
            "beacon": {
                "target": "banner-button",
                "offset": 0
            }
        },
        {
            "banner": {
                "text": "Your light show will be animated... so we need a loop!<br> Open the Control tray."
            },
            "beacon": {
                "target": {
                    "category": "control"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "control"
                }
            }
        },
        {
            "banner": {
                "text": "This block run your code over and over, every single second!"
            },
            "beacon": {
                "target": {
                    "flyout_block": "every_x_seconds"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "every_x_seconds",
                        "id": "block_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block."
