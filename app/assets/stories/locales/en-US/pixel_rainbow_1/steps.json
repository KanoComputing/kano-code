{
    "steps": [
        {
            "banner": {
                "text": "We're going to make a sound reactive light show, let's start with the basics",
                "next_button": true
            },
            "beacon": {
                "target": "banner-button",
                "offset": 0
            }
        },
        {
            "banner": {
                "text": "Light shows are animated so we need a loop, open the Control tray"
            },
            "beacon": {
                "target": {
                    "category": "control"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "control"
                }
            }
        },
        {
            "banner": {
                "text": "This block repeats all the code within it every second"
            },
            "beacon": {
                "target": {
                    "flyout_block": "every_x_seconds"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "every_x_seconds",
                        "id": "block_0"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": null,
                        "rawId": "default_part_event_id"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": null,
                            "rawId": "default_part_event_id",
                            "inputName": "DO"
                        },
                        "target": "block_0"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": null,
                        "rawId": "default_part_event_id"
                    }
                },
                "target": "DO"
            }
        },
        {
            "banner": {
                "text": "Let's light up a pixel, open this tray"
            },
            "beacon": {
                "target": {
                    "category": "lightboard"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "lightboard"
                }
            }
        },
        {
            "banner": {
                "text": "This block lights up pixels on the lightboard"
            },
            "beacon": {
                "target": {
                    "flyout_block": "lightboard#turn_on"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "lightboard#turn_on",
                        "id": "block_1"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block so it repeats every second"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_0",
                        "rawId": "pN//yl~e%?Jm-*e82[R("
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_0",
                            "rawId": "pN//yl~e%?Jm-*e82[R(",
                            "inputName": "DO"
                        },
                        "target": "block_1"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_0",
                        "rawId": "pN//yl~e%?Jm-*e82[R("
                    }
                },
                "target": "DO"
            }
        },
        {
            "banner": {
                "text": "Let's turn on a specific pixel, open the lightboard tray"
            },
            "beacon": {
                "target": {
                    "category": "lightboard"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "lightboard"
                }
            }
        },
        {
            "banner": {
                "text": "Drag the block onto your code space"
            },
            "beacon": {
                "target": {
                    "flyout_block": "lightboard#light_x_y"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "lightboard#light_x_y",
                        "id": "block_2"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_1",
                        "rawId": "}:N^fbDBY(C7Fvrq|^GN"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_1",
                            "rawId": "}:N^fbDBY(C7Fvrq|^GN",
                            "inputName": "TARGET"
                        },
                        "target": "block_2"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_1",
                        "rawId": "}:N^fbDBY(C7Fvrq|^GN"
                    }
                },
                "target": "TARGET"
            }
        },
        {
            "banner": {
                "text": "This chooses the horizontal position of the pixel, Change it from <kano-value-preview><span>1</span></kano-value-preview> to <kano-value-preview><span>8</span></kano-value-preview>"
            },
            "beacon": {
                "target": {
                    "block": {
                        "shadow": "X",
                        "id": "block_2"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "shadow": "X",
                            "id": "block_2"
                        },
                        "value": "8"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Notice how the pixel moved. Now for the vertical position, change this from <kano-value-preview><span>1</span></kano-value-preview> to <kano-value-preview><span>5</span></kano-value-preview>"
            },
            "beacon": {
                "target": {
                    "block": {
                        "shadow": "Y",
                        "id": "block_2"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "shadow": "Y",
                            "id": "block_2"
                        },
                        "value": "5"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Ok now we've turned on a light let's make it colorful, open the Color tray"
            },
            "beacon": {
                "target": {
                    "category": "color"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "color"
                }
            }
        },
        {
            "banner": {
                "text": "This block chooses a random color every time"
            },
            "beacon": {
                "target": {
                    "flyout_block": "random_colour"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "random_colour",
                        "id": "block_3"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_1",
                        "rawId": "}:N^fbDBY(C7Fvrq|^GN"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_1",
                            "rawId": "}:N^fbDBY(C7Fvrq|^GN",
                            "inputName": "COLOR"
                        },
                        "target": "block_3"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_1",
                        "rawId": "}:N^fbDBY(C7Fvrq|^GN"
                    }
                },
                "target": "COLOR"
            }
        },
        {
            "banner": {
                "text": "Wow! A flashing pixel. Ok it doesn't look like much now but soon it will be awesome, try the next challenge",
                "next_button": true
            },
            "beacon": {
                "target": "banner-button",
                "offset": 0
            }
        }
    ],
    "parts": [],
    "modules": [
        "control",
        "color"
    ],
    "variables": [],
    "filterBlocks": {
        "control": [
            "every_x_seconds"
        ],
        "lightboard": [
            "turn_on",
            "light_x_y"
        ],
        "color": [
            "random_colour"
        ]
    },
    "mode": "lightboard"
}