{
    "parts": ["image"],
    "modules": ["control", "operators", "variables"],
    "steps": [{
        "tooltips": [{
            "location": "add-part-button",
            "text": "Open the parts sidebar",
            "position": "top"
        }],
        "validation": {
            "open-parts": true
        }
    },{
        "tooltips": [{
            "location": "parts-panel-part-image",
            "position": "right",
            "text": "Drag the image to<br />your app"
        }],
        "arrow": {
            "source": "parts-panel-part-image",
            "target": "workspace-panel",
            "size": 120
        },
        "validation": {
            "add-part": {
                "type": "image",
                "id": "image_1"
            }
        }
    },{
        "tooltips": [{
            "location": {
                "path": "workspace",
                "part": "image_1"
            },
            "position": "right",
            "text": "Click on the image"
        }],
        "validation": {
            "open-settings-tooltip": {
                "target": "image_1"
            }
        }
    },{
        "tooltips": [{
            "location": "workspace.tooltip",
            "position": "bottom",
            "text": "Click 'settings'"
        }],
        "validation": {
            "open-part-settings": {
                "target": "image_1"
            }
        }
    },{
        "tooltips": [{
            "location": "part-editor.ui-editor.look.properties.src",
            "position": "bottom",
            "text": "Click 'CHANGE IMAGE'"
        }],
        "validation": {
            "settings-interaction": {
                "setting": "image"
            },
            "file-picker-open": true
        }
    },{
        "tooltips": [{
            "location": {
                "root": "body",
                "path": "modal.modal.fs.judoka"
            },
            "position": "right",
            "zIndex": 200,
            "tracking": true,
            "text": "Pick the Judoka"
        }],
        "validation": {
            "selected-part-change": {
                "property": "userProperties.src",
                "value": "/assets/sprites/judoka-face.svg"
            }
        }
    }]
}
