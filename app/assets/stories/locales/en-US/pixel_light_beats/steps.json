            "beacon": {
                "target": {
                    "block": {
                        "id": "block_1",
                        "rawId": "T5E{42C3k3,fW~(k~NM)"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_1",
                            "rawId": "T5E{42C3k3,fW~(k~NM)",
                            "inputName": "TARGET"
                        },
                        "target": "block_2"
                    }
                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_1",
                        "rawId": "T5E{42C3k3,fW~(k~NM)"
                    }
                },
                "target": "TARGET"
            }
        },
        {
