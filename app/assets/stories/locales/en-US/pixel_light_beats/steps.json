            },
            "beacon": {
                "target": {
                    "category": {
                        "part": "part_0"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": {
                        "part": "part_0"
                    }
                }
            }
        },
        {
            "banner": {
        				"text": "Grab another of these blocks."
            },
            "beacon": {
                "target": {
                    "flyout_block": {
                        "part": "part_0",
                        "type": "get_volume"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "target": "part_0",
                        "type": "get_volume",
                        "id": "block_5"
                    }
                }
            }
