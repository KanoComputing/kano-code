            "banner": {
        				"text": "Connect it to control the darkness, or value, of the color."
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_3",
                        "rawId": "rdnau|=85KMc(xRli,4%"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_3",
                            "rawId": "rdnau|=85KMc(xRli,4%",
                            "inputName": "3"
