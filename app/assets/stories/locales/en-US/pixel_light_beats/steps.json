            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_4"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "id": "block_4"
                        },
                        "value": "pitch"
                    }
                }
            }
