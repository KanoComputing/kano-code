                "target": {
                    "category": "lightboard"
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": "lightboard"
                }
            }
        },
        {
            "banner": {
        				"text": "This block turns on the lights."
            },
            "beacon": {
                "target": {
                    "flyout_block": "lightboard#turn_on"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "lightboard#turn_on",
                        "id": "block_1"
                    }
                }
            }
        },
        {
            "banner": {
                "text": "Connect it to this block."
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_0",
                        "rawId": "yFZij/%R=,(tF:c6RPCC"
