                }
            },
            "phantom_block": {
                "location": {
                    "block": {
                        "id": "block_1",
                        "rawId": "T5E{42C3k3,fW~(k~NM)"
                    }
                },
                "target": "COLOR"
            }
        },
        {
            "banner": {
        				"text": "Nice. Now change <kano-value-preview><span>rgb</span></kano-value-preview> to <kano-value-preview><span>hsv</span></kano-value-preview><br>. <br>Thatâ€™s short for Hue-Saturation-Value!"
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_3"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "value": {
                        "target": {
                            "id": "block_3"
                        },
                        "value": "hsv"
                    }
                }
            }
        },
        {
            "banner": {
        				"text": "You can control the lights using sound.<br>Open the Mic tray."
            },
            "beacon": {
                "target": {
                    "category": {
                        "part": "part_0"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "open-flyout": {
                        "part": "part_0"
                    }
                }
            }
        },
        {
            "banner": {
        				"text": "This block shares how loud or soft the sounds from the microphone are."
            },
            "beacon": {
                "target": {
                    "flyout_block": {
                        "part": "part_0",
                        "type": "get_volume"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "target": "part_0",
                        "type": "get_volume",
                        "id": "block_4"
                    }
                }
            }
        },
