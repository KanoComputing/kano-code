            "banner": {
        				"text": "This block lets you generate custom colors."
            },
            "beacon": {
                "target": {
                    "flyout_block": "create_color"
                }
            },
            "validation": {
                "blockly": {
                    "create": {
                        "type": "create_color",
                        "id": "block_3"
                    }
                }
            }
        },
        {
            "banner": {
        				"text": "Connect it to the 'set color' input."
            },
            "beacon": {
                "target": {
                    "block": {
                        "id": "block_1",
                        "rawId": "T5E{42C3k3,fW~(k~NM)"
                    }
                }
            },
            "validation": {
                "blockly": {
                    "connect": {
                        "parent": {
                            "id": "block_1",
                            "rawId": "T5E{42C3k3,fW~(k~NM)",
